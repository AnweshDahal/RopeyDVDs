@model RopeyDVDs.Models.ViewModels.IssueLoanViewModel;
@{
    ViewData["Title"] = "Issue";
}

<h1>Issue On Loan</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Loans" asp-action="SaveLoan">
            <div class="form-group">
                <label class="control-label">DVD Copy</label>
                <input type="hidden" asp-for="DVDCopyNumber" value="@ViewBag.DVDCopy.ID" />
                <h3 class="font-weight-bold"><span class="text-muted">#@ViewBag.DVDCopy.ID</span> @ViewBag.DVDCopy.Title</h3>
            </div>
            <div class="form-group">
                <label class="control-label">Member</label>
                <select asp-for="MemberNumber" class="form-control" asp-items="@ViewBag.Member"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Loan Type</label>
                <select asp-for="LoanTypeNumber" class="form-control" asp-items="@ViewBag.LoanType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
