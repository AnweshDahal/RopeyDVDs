@model RopeyDVDs.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<h1>Delete Actor</h1>

<h3>Are you sure you want to delete this actor?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Actor's Surname
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorSurName)
        </dd>
        <dt class = "col-sm-2">
           Actor's Firstname
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorFirstName)
