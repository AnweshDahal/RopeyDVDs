@model RopeyDVDs.Models.DVDCopy

@{
    ViewData["Title"] = "Delete DVD Copy";
}

<h1>Delete DVD Copy</h1>

<h3>Are you sure you want to delete this dvd copy?</h3>
<div>
    <h4>DVDCopy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           DVD Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDNumber)
        </dd>
        <dt class = "col-sm-2">
           Date Purchased
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePurchased)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
