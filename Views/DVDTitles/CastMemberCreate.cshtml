@model RopeyDVDs.Models.CastMember

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CastMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CastMemberCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DVDNumber" class="control-label">For DVD</label>
                <h3 class="display-3">@ViewBag.DVDTitle.Title</h3>
                <input type="hidden" class="d-none" asp-for="DVDNumber" value="@ViewBag.DVDTitle.ID" />
                <span asp-validation-for="DVDNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorNumber" class="control-label">Enter Actor Number</label>
                <select asp-for="ActorNumber" class="form-control" asp-items="ViewBag.ActorNumber"></select>
                <span asp-validation-for="ActorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to DVD List</a> |
    <a asp-action="ActorCreate">Add New Actor</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
