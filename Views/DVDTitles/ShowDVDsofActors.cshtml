
@{
    ViewData["Title"] = "ShowDVDsofActors";
}

<h1>Movies and Cast Name For Selected Actor</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                Cast
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
         <td>@foreach(var value in item.Cast)
            {
                <p>@value</p>
            }
        </td>
            
       
        </tr>
}
    </tbody>
</table>
