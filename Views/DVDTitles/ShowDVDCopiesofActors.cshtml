
@{
    ViewData["Title"] = "ShowDVDCopiesofActors";
}

<h1>DVD Copies for Movies of Selected Actor</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Movie Cast
            </th>
            <th>
                Number Of Copies
            </th>
      
      
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
           <td>@foreach(var value in item.Cast)
            {
                <p>@value</p>
            }
        </td>
            <td>
                @item.NumberOfCopies
            </td>
        </tr>
}
    </tbody>
</table>
