@model RopeyDVDs.Models.Member

@{
    ViewData["Title"] = "Edit Mmeber";
}

<h1>Edit Each Member Details</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MemberLastName" class="control-label">Enter Member's Last Name</label>
                <input asp-for="MemberLastName" class="form-control" />
                <span asp-validation-for="MemberLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberFirstName" class="control-label">Enter Member's First Name</label>
                <input asp-for="MemberFirstName" class="form-control" />
                <span asp-validation-for="MemberFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberAddress" class="control-label">Enter Member's Address</label>
                <input asp-for="MemberAddress" class="form-control" />
                <span asp-validation-for="MemberAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberDOB" class="control-label">Enter Member's Date of Birth</label>
                <input asp-for="MemberDOB" class="form-control" />
                <span asp-validation-for="MemberDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MembershipCategoryNumber" class="control-label">Enter Membership's Category Number</label>
                <input asp-for="MembershipCategoryNumber" class="form-control" />
                <select asp-for="MembershipCategoryNumber" class="form-control" asp-items="@ViewBag.MembershipCategory"></select>
                <span asp-validation-for="MembershipCategoryNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
