@model RopeyDVDs.Models.Studio

@{
    ViewData["Title"] = "Add New Studio";
}

<h1>Add New Studio</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudioName" class="control-label">Enter Studio's Name</label>
                <input asp-for="StudioName" class="form-control" />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
