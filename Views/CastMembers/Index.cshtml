@model IEnumerable<RopeyDVDs.Models.CastMember>

@{
    ViewData["Title"] = "Cast Member List";
}

<h1>Cast Member List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              DVD Number
            </th>
            <th>
              Actor Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DVDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
