@model RopeyDVDs.Models.CastMember

@{
    ViewData["Title"] = "Add New Cast Member";
}

<h1>Add New Cast Member</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DVDNumber" class="control-label">Enter DVD Number</label>
                <input asp-for="DVDNumber" class="form-control" />
                <span asp-validation-for="DVDNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorNumber" class="control-label">Enter Actor Number</label>
                <input asp-for="ActorNumber" class="form-control" />
                <span asp-validation-for="ActorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
